{{> header}}

<div class="wrapper">
    <div id="left">
      <div id="showcase">
        <div class="showcase-content">
          <h1 class="showcase-text">
            Welcome to the only place where balkans <strong>aren't fighting.</strong>
          </h1>
          <h3 class="showcase-description">Create account or enter existing one.</h3>
          <a href="#/register" class="secondary-btn">Register</a>
        </div>
      </div>
    </div>
    <div id="right">
        <div id="signin">
          <h1 class="showcase-text">Login</h1>
        <form id="formLogin" class="form" action="#/login" method="post">
          <div>
            <label>Username</label>
            <input name="username" type="text" class="text-input" />
          </div>
          <div>
            <label>Password</label>
            <input name="password" type="password" class="text-input" />
          </div>
          <button id="btnLogin" type="submit" value="Sign In" class="primary-btn">Sign In</button>
        </form>
        </div>
    </div>
</div>

{{> footer}}