{{> header}}

<div class="content-register">
    <div class="register-content">
        <h1 class="register-title">Register</h1>
        <form class="form" id="formRegister" action="#/register" method="post">
            <label>
                <input name="username" class="text-input" type="text" required placeholder="Username">
            </label>
            <label>
                <input name="password" type="password" class="text-input" required placeholder="Password">
            </label>
            <label>
                <input name="repeatPass" type="password" class="text-input" required placeholder="Repeat Password">
            </label>
            <input class="secondary-btn" id="btnRegister" type="submit" value="Register">
            <h3 class="register-description">or if you already have an account</h3>
            <button id="btnLogin" class="primary-btn" type="button" value="Sign In"><a href="#">Login</a></button>
        </form>
    </div>
</div>

{{> footer}}